{
  "name": "desktop-gpt",
  "version": "1.1.0",
  "description": "A desktop application for ChatGPT with native system integration",  "main": "main.js",
  "homepage": "https://github.com/BWolf-16/DesktopGPT",
  "author": {
    "name": "BWolf",
    "email": "bened@example.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist build node_modules/.cache"
  },
  "keywords": [
    "electron",
    "chatgpt",
    "desktop",
    "ai",
    "openai",
    "assistant"  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BWolf-16/DesktopGPT.git"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "electron-rebuild": "^3.2.9",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.benedict.desktop-gpt",
    "productName": "Desktop GPT",
    "copyright": "Copyright Â© 2024 Benedict",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/.cache/**/*",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/chatgpt-icon.ico",
      "publisherName": "Benedict",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/chatgpt-icon.ico",
      "uninstallerIcon": "assets/chatgpt-icon.ico",
      "installerHeaderIcon": "assets/chatgpt-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Desktop GPT",
      "menuCategory": "Productivity",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/chatgpt-icon.icns",
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Desktop GPT Installer",
      "icon": "assets/chatgpt-icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/chatgpt-icon.png",
      "category": "Office",
      "synopsis": "Desktop application for ChatGPT",
      "desktop": {
        "Name": "Desktop GPT",
        "Comment": "Chat with AI using ChatGPT",
        "Keywords": "AI;Chat;OpenAI;GPT;Assistant;",
        "StartupWMClass": "desktop-gpt"      }
    },
    "compression": "maximum",
    "forceCodeSigning": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
